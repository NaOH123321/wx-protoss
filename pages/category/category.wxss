/* pages/category/category.wxss */
@import "../tpls/category/category-tpl.wxss";

.category-box {
  display: flex;
  height: 100vh;
  width: 100%; /* 比老师的多了此行 */
  overflow: hidden;
}

.left-box {
  flex: 0 0 150rpx;
  border-right: 1rpx solid #d8d8d8;
}

.menu-item {
  height: 50rpx;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-left: 6rpx solid #fff;
}

.menu-item.selected {
  color: #ab956d;
  border-left-color: #ab956d;
}

.right-box {
  flex: 1;
  transition: all 500ms ease-in-out;
}

.foods-type-box {
  height: 100vh;
}
